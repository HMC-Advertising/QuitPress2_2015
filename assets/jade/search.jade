- get_header(); 
	main(role="main" class="main col-lg-12 searchPage")<!-- Search Results for: -->
		h1(class="page-title") Search Results
		<!-- Reults List -->
		- if ( have_posts() ) : 
			- while ( have_posts() ) : the_post(); 
				article(class="results")
					h4
						a(href!="<?php the_permalink() ?>" title!="<?php the_title_attribute(); ?>")
							- the_title(); 
					- the_excerpt('<span class="read-more">Read more &raquo;</span>');  
					- if(strlen(get_the_excerpt()) > 275 ) : 
						a(href!="<?php the_permalink() ?>" class="button") Read More 
					- endif;
				hr(class="search")<!-- Previous & Next -->
			- endwhile; posts_nav_link('--','Previous','Next');
		- else: 
			article(id="post-not-found")
				h4 Sorry, no results.
				p Try your search again.
		- endif;  
- get_footer();  ?>